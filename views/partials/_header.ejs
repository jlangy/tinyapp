<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <% if(username) { %>
      <span class="navbar-text text-dark mr-3"><strong>Logged in as: <%= username %></strong></span>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
        <button class="btn btn-light my-2 my-sm-0 mr-3" type="submit">Logout</button>
      </form>
      <% } else { %>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/login">
        <button class="btn btn-light my-2 my-sm-0 mr-3" type="submit">Login</button>
        <input class="form-control mr-sm-2" placeholder="Username" type="text" aria-label="username" name="username">
      </form>
      <% } %>
  </nav>
</header>
  